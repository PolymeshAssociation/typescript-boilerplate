{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "jest": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "@typescript-eslint/indent": "off"
  },
  "plugins": ["@typescript-eslint", "eslint-plugin-tsdoc"],
  "parserOptions": {
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "extends": [ "standard", "semistandard", "prettier"]
}
